extends layout

block content
  .container
    header.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Web Application Exercise
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Home
            li
              a(href='#') About
            li
              a(href='#') Contact

    .message-table.input-group
      input.form-control(type='text')
      .input-group-btn
        button.btn.btn-default(type='button')
          span Send

    table.table.table-stripped
      thead
        tr
          th #
          th Text
          th Date
      tbody
        tr
          td A
          td B
          td C
        tr
          td A
          td B
          td C

    footer.navbar.navbar-fixed-bottom
      .container-fluid
        ul.pager
          li.previous
            a(href='#', aria-label='Previous') Older
              span(aria-hidden='true') &larr;
          li.next
            a(href='#', aria-label='Next') Newer
              span(aria-hidden='true') &rarr;
